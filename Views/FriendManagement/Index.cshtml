@model IEnumerable<SocialSync.Models.User>

@{
    ViewData["Title"] = "Friend Management";
}

<div class="container mt-4">

    <!-- PAGE HEADER -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-users"></i> Friend Management</h2>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-primary"
                    onclick="openModal('@Url.Action("Find", "FriendManagement")')">
                <i class="fas fa-user-plus"></i> Find Friend
            </button>
        </div>
    </div>

    <!-- SUCCESS / ERROR MESSAGE -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- SEARCH BAR -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text"
                           name="searchString"
                           class="form-control"
                           placeholder="Search by name or email..."
                           value="@Context.Request.Query["searchString"]" />
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- TABLE -->
    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Date Joined</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-user-circle text-primary"></i>
                                        @item.FullName
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.DateJoined.ToString("dd MMM yyyy")</td>
                                    <td class="text-center">
                                        <!-- VIEW -->
                                        <button class="btn btn-sm btn-info me-1"
                                                onclick="openModal('@Url.Action("Details", "FriendManagement", new { id = item.Id })')">
                                            <i class="fas fa-eye"></i>
                                        </button>

                                        <!-- DELETE -->
                                        <button class="btn btn-sm btn-danger"
                                                onclick="openModal('@Url.Action("Delete", "FriendManagement", new { id = item.Id })')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            No users found. Click "Add New Friend" to get started!
        </div>
    }
</div>

<!-- MODAL -->
<div class="modal fade" id="actionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="modalContent"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function openModal(url) {
            fetch(url)
                .then(res => res.text())
                .then(html => {
                    document.getElementById("modalContent").innerHTML = html;
                    new bootstrap.Modal(document.getElementById("actionModal")).show();
                });
        }
    </script>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script>
        function searchFriend() {
            const q = document.getElementById("friendSearchInput").value;
            openModal(`@Url.Action("Find", "FriendManagement")?search=${encodeURIComponent(q)}`);
        }
    </script>

    <script>
        function addFriend(userId) {
            fetch('/FriendManagement/Follow', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: 'id=' + userId
            })
            .then(res => {
                if (!res.ok) throw new Error();
                return res.text();
            })
            .then(() => {
                location.reload();
            })
            .catch(() => {
                alert('Failed to add friend');
            });
        }
    </script>
}

