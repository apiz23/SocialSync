@model SocialSync.Models.User

<div class="modal-header">
    <h5 class="modal-title">
        <i class="fas fa-user"></i> Friend Details
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="mb-2"><strong>Name:</strong> @Model.FullName</div>
    <div class="mb-2"><strong>Email:</strong> @Model.Email</div>
    <div class="mb-2"><strong>Phone:</strong> @Model.Phone</div>
    <div class="mb-2"><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</div>
    <div class="mb-2"><strong>Date Joined:</strong> @Model.DateJoined.ToString("dd MMM yyyy")</div>
</div>

<div class="modal-footer">
    <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
