@model SocialSync.Models.Post

@{
    ViewData["Title"] = "Delete Post";
    var currentUserEmail = Context.Session.GetString("UserEmail");
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Post
                    </h2>
                </div>

                <div class="card-body">
                    <!-- Show error if user is not the author -->
                    @if (Model.Author != currentUserEmail)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i>
                            You don't have permission to delete this post.
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Posts
                        </a>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5><i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this post?</h5>
                            <p class="mb-0">This action cannot be undone. All data associated with this post will be permanently removed.</p>
                        </div>

                        <!-- Post Preview -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-1">@Model.Title</h5>
                                <small class="text-muted">
                                    <i class="bi bi-person-circle"></i> @Model.Author
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-calendar"></i> @Model.CreatedDate.ToString("MMM dd, yyyy")
                                    <span class="mx-2">•</span>
                                    <span class="badge bg-primary">@Model.Category</span>
                                </small>
                            </div>
                            <div class="card-body">
                                <p class="card-text">@Model.Content</p>

                                @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                                {
                                    <div class="mt-3">
                                        <img src="@Model.ImageUrl"
                                             class="img-fluid rounded"
                                             style="max-height: 300px;"
                                             alt="Post image"
                                             onerror="this.style.display='none'" />
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex gap-3 text-muted">
                                    <span><i class="bi bi-heart"></i> @Model.Likes Likes</span>
                                    <span><i class="bi bi-chat"></i> @Model.Comments Comments</span>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Form -->
                        <form asp-action="DeletePost" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="PostId" />

                            <div class="alert alert-warning">
                                <i class="bi bi-info-circle"></i>
                                <strong>Note:</strong> You are about to delete this post permanently.
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-secondary btn-lg">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg" id="deleteBtn">
                                    <i class="bi bi-trash"></i> Delete Post
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteBtn = document.getElementById('deleteBtn');
        const form = document.querySelector('form');

        form?.addEventListener('submit', function(e) {
            const confirmed = confirm('Are you absolutely sure? This cannot be undone!');

            if (!confirmed) {
                e.preventDefault();
                return false;
            }

            // Disable button after confirmation
            deleteBtn.disabled = true;
            deleteBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
        });
    </script>
}

<style>
    .card {
        border: 2px solid #dc3545;
    }

    .btn-lg {
        padding: .75rem 2rem;
    }
</style>