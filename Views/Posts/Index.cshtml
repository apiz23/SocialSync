@model List<SocialSync.Models.Post>

@{
    ViewData["Title"] = "Posts";
    var currentUserEmail = Context.Session.GetString("UserEmail");
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-chat-square-text"></i> Community Posts</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create Post
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Posts List -->
    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No posts yet. Be the first to create one!
                </div>
            </div>
        }
        else
        {
            @foreach (var post in Model)
            {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm post-card">
                        <div class="card-header bg-white border-0 pt-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">@post.Title</h5>
                                    <small class="text-muted">
                                        <i class="bi bi-person-circle"></i> @post.Author
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar"></i> @post.CreatedDate.ToString("MMM dd, yyyy")
                                        <span class="mx-2">•</span>
                                        <span class="badge bg-primary">@post.Category</span>
                                    </small>
                                </div>

                                <!-- Edit/Delete Buttons (Only for post owner) -->
                                @if (post.Author == currentUserEmail)
                                {
                                    <div class="btn-group">
                                        <button type="button"
                                                class="btn btn-sm btn-outline-primary"
                                                onclick="openEditModal(@post.PostId, '@post.Title', '@Html.Raw(post.Content.Replace("'", "\\'").Replace("\n", "\\n"))', '@post.Category', '@post.ImageUrl')">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="confirmDelete(@post.PostId, '@post.Title')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">@post.Content</p>

                            @if (!string.IsNullOrWhiteSpace(post.ImageUrl))
                            {
                                <div class="mt-3">
                                    <img src="@post.ImageUrl"
                                         class="img-fluid rounded"
                                         style="max-height: 400px; width: 100%; object-fit: cover;"
                                         alt="Post image"
                                         onerror="this.style.display='none'" />
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-white border-0">
                            <div class="d-flex gap-3 text-muted">
                                <span><i class="bi bi-heart"></i> @post.Likes Likes</span>
                                <span><i class="bi bi-chat"></i> @post.Comments Comments</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-pencil"></i> Edit Post</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editPostId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                        <input type="text" id="editTitle" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Content <span class="text-danger">*</span></label>
                        <textarea id="editContent" class="form-control" rows="6" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Category</label>
                        <select id="editCategory" class="form-select">
                            <option value="General">General</option>
                            <option value="Announcement">Announcement</option>
                            <option value="Event">Event</option>
                            <option value="Club Activity">Club Activity</option>
                            <option value="Discussion">Discussion</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Image URL (Optional)</label>
                        <input type="url" id="editImageUrl" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveEdit()">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this post?</p>
                <p class="fw-bold" id="deletePostTitle"></p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="deletePost()">
                    <i class="bi bi-trash"></i> Delete Post
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentPostId = null;
        const editModal = new bootstrap.Modal(document.getElementById('editModal'));
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        // Open Edit Modal
        function openEditModal(id, title, content, category, imageUrl) {
            currentPostId = id;
            document.getElementById('editPostId').value = id;
            document.getElementById('editTitle').value = title;
            document.getElementById('editContent').value = content;
            document.getElementById('editCategory').value = category;
            document.getElementById('editImageUrl').value = imageUrl || '';
            editModal.show();
        }

        // Save Edit
        async function saveEdit() {
            const title = document.getElementById('editTitle').value.trim();
            const content = document.getElementById('editContent').value.trim();
            const category = document.getElementById('editCategory').value;
            const imageUrl = document.getElementById('editImageUrl').value.trim();

            if (!title || !content) {
                alert('Title and Content are required!');
                return;
            }

            const postData = {
                Title: title,
                Content: content,
                Category: category,
                ImageUrl: imageUrl || null
            };

            try {
                const response = await fetch(`/Posts/EditAjax/${currentPostId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(postData)
                });

                if (response.ok) {
                    editModal.hide();
                    location.reload();
                } else {
                    alert('Failed to update post. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        }

        // Confirm Delete
        function confirmDelete(id, title) {
            currentPostId = id;
            document.getElementById('deletePostTitle').textContent = title;
            deleteModal.show();
        }

        // Delete Post
        async function deletePost() {
            try {
                const response = await fetch(`/Posts/DeleteAjax/${currentPostId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    deleteModal.hide();
                    location.reload();
                } else {
                    alert('Failed to delete post. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        }
    </script>
}

<style>
    .post-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
    }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
        }

    .btn-group .btn {
        font-size: 0.875rem;
    }
</style>